<!DOCTYPE html>
<html>
<head>
  <title>Workspace</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>


<% if alert %>
    <p class="alert bg-warning" ><%= alert %></p>
  <% end %>
<%= yield %>

<% if !current_page?(root_url) %>
  <nav class="nav navbar-inverse">
  <%= link_to 'Get back to homepage', root_path, :class => 'navbar-link btn btn-warning navbar-btn' %>  

  <% if user_signed_in? %>
    Logged in as <em><%= current_user.email %></em>.
    <%= link_to 'Edit profile', edit_user_registration_path, :class => 'navbar-link btn btn-success navbar-btn' %> |
    <%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'navbar-link btn btn-success navbar-btn'  %>
  <% else %>
    <%= link_to "Sign up", new_user_registration_path, :class => 'navbar-link btn btn-primary btn-default navbar-btn'  %> |
    <%= link_to "Login", new_user_session_path, :class => 'navbar-link btn btn-warning btn-default navbar-btn'  %>
  <% end %>

  </nav>
  
  <% else %>
  <%= link_to 'View', posts_path, :class => 'navbar-link btn btn-warning navbar-btn' %>  

  <% if user_signed_in? %>
    Logged in as <strong><%= current_user.email %></strong>.
    <%= link_to 'Edit profile', edit_user_registration_path, :class => 'navbar-link btn btn-success navbar-btn' %> |
    <%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'navbar-link btn btn-success navbar-btn'  %>
  <% else %>
    <%= link_to "Sign up", new_user_registration_path, :class => 'navbar-link btn btn-primary btn-default navbar-btn'  %> |
    <%= link_to "Login", new_user_session_path, :class => 'navbar-link btn btn-warning btn-default navbar-btn'  %>
  <% end %>  
<% end %>  


</body>
</html>
